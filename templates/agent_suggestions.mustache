{{!
@template block_ai_chat/agent_suggestions

    Button to call ai_chat modal

    Example context (json):
    {
        "title":"AI Companion",
        "arialabel":"Open AI Companion"
    }
}}
{{intro}}
<ul>
    {{#suggestions}}
        <li>FIELDNAME: {{fieldname}}<br/>SUGGESTION: {{suggestionvalue}}<br/>EXPLANATION: {{explanation}}<br/>
            <button class="btn btn-primary btn-sm" data-block_ai_chat-action="accept_suggestion" data-block_ai_chat-for-element="{{elementId}}"
            data-block_ai_chat-suggestionvalue="{{suggestionvalue}}">ACCEPT</button>
            <button class="btn btn-danger btn-sm" data-block_ai_chat-action="decline_suggestion" data-block_ai_chat-for-element="{{elementId}}">DECLINE</button>
        </li>
    {{/suggestions}}
</ul>
{{outro}}
{{#js}}
    require(['block_ai_chat/agent_buttons'], function(AgentButtons) {
    console.log('thats a test');
        AgentButtons.init();
    });
{{/js}}

