<div class="block_ai_chat-history-marker" data-block_ai_chat-component="historymarker" data-id="historymarker-{{uniqid}}">
<hr class="block_ai_chat-history-line">
<span data-block_ai_chat-element="historymarkercontent" class="badge rounded-pill text-primary bg-secondary cursor-pointer" role="button" tabindex="0"
      data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top"
      data-bs-content="{{#str}}historylengthinfo, block_ai_chat{{/str}}" data-bs-trigger="focus"
      aria-label="{{#str}}historylengthinfo, block_ai_chat{{/str}}">{{conversationContextLimit}}</span>
</div>
{{#js}}
    require(['block_ai_chat/components/historymarker'], function(component) {
        component.init('[data-block_ai_chat-component="historymarker"][data-id="historymarker-{{uniqid}}"]');
    });
{{/js}}
