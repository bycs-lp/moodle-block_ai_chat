<div class="d-flex flex-row justify-content-between p-1" data-block_ai_chat-component="personalistitem" data-id="personalistitem-{{uniqid}}" data-block_ai_chat-persona-id="{{id}}">
    <div data-block_ai_chat-element="personaname" class="flex-grow-1">{{name}}</div>
    {{^nopersona}}
    <div data-block_ai_chat-element="editactions">
        {{#editable}}<a href="#" data-block_ai_chat-element="editpersonalink">{{#pix}} t/edit, core, {{#str}} edit {{/str}}{{/pix}}</a>{{/editable}}
        <a href="#" data-block_ai_chat-element="duplicatepersonalink">{{#pix}} t/copy, core, {{#str}} duplicate {{/str}}{{/pix}}</a>
        {{#editable}}<a href="#" data-block_ai_chat-element="deletepersonalink">{{#pix}} t/delete, core, {{#str}} delete {{/str}}{{/pix}}</a>{{/editable}}
    </div>
    {{/nopersona}}
</div>
{{#js}}
    require(['block_ai_chat/components/personalistitem'], function(component) {
        component.init('[data-block_ai_chat-component="personalistitem"][data-id="personalistitem-{{uniqid}}"][data-block_ai_chat-persona-id="{{id}}"]');
    });
{{/js}}
