{{!
    @template block_ai_chat/titlearea

    Template for iconpicker.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "history": {
            "message":"content",
            "sender":"user"
        }
    }
}}
<div data-block_ai_chat-component="titlearea" data-id="titlearea-{{uniqid}}" class="block_ai_chat-titlearea d-flex flex-column">
    <div class="d-flex flex-row justify-content-between">
        {{> block_ai_chat/components/title }}
        {{> block_ai_chat/components/headeractions }}
    </div>
    {{> block_ai_chat/components/boxes }}
</div>
{{#js}}
    require(['block_ai_chat/components/titlearea'], (TitleAreaComponent) => {
        TitleAreaComponent.init('[data-block_ai_chat-component="titlearea"][data-id="titlearea-{{uniqid}}"]');
    });
{{/js}}
