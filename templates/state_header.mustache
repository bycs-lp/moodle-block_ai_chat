{{!
    @template block_ai_chat/state_header

    Template for the state header showing for example persona information and history length.

    Example context (json):
    {
    }
}}
<div class="block_ai_chat-stateheader d-flex flex-row gap-2" data-block_ai_chat-element="stateheader">
    {{#showAgentMode}}
        <div class="block_ai_chat-modeswitch badge rounded-pill bg-warning cursor-pointer d-none" data-block_ai_chat-element="modeswitch"{{!
        }} title="{{#str}}modeinfo, block_ai_chat{{/str}}">
            {{! This is populated dynamically with JS. }}
        </div>
    {{/showAgentMode}}
    <div class="block_ai_chat-personabanner badge rounded-pill bg-info text-truncate cursor-pointer" data-block_ai_chat-element="personabanner"{{!
         }} title="{{#str}}personabannerinfo, block_ai_chat{{/str}}">
        {{! This is populated dynamically with JS. }}
    </div>
</div>
