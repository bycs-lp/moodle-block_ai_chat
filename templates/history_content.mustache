{{!
    @template block_ai_chat/history_content

    Content of the history component. Used for easily being able to re-render if necessary.

    Example context (json):
    {
    }
}}
<button class="btn btn-secondary mt-3 mb-3" data-block_ai_chat-element="newdialogbutton">
    <i class="icon fa fa-comment" aria-hidden="true"></i> {{#str}} newdialog, block_ai_chat {{/str}}
</button>

{{#dates}}
    <div class="block_ai-date mt-3 mb-2">
        {{key}}
    </div>
    <div class="block_ai-history-items card">
        {{#objects}}
            <div data-block_ai_chat-conversationid="{{conversationid}}" data-block_ai_chat-element="conversationlistitem">
                <a href="#"><i class="fa fa-comment mr-2"></i><span>{{{title}}}</span></a> {{time}}
            </div>
        {{/objects}}
    </div>
{{/dates}}
{{^dates}}
    <div>
        {{#str}} nohistory, block_ai_chat {{/str}}
    </div>
{{/dates}}
