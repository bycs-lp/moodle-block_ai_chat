{{!
    @template block_ai_interface/floatingbutton

    Button to call ai interface modal

    Example context (json):
    {
        "message":"content",
        "sender":"",
    }
}}
{{! Show message from user or ai }}
{{#sender}}
<div class="message agent">
    <div class="identity">Du</div>
{{/sender}}
{{^sender}}
<div class="message ai">
    <div class="identity">KI</div>
{{/sender}}
    <div class="content">
        <div class="copiedtoast">{{#str}} copied, block_ai_interface {{/str}}</div>
        <a class="copy"><i class="fa fa-copy"></i></a>
        <div class="text">
            {{content}}
        </div>
    </div>
</div>
{{! Insert placeholder in case of pending question }}
{{^answer}}
<div class="message ai">
    <div class="identity">KI</div>
    <div class="content awaitanswer">
        <div class="copiedtoast">{{#str}} copied, block_ai_interface {{/str}}</div>
        <a class="copy"><i class="fa fa-copy"></i></a>
        <div class="text">
            <div class="spinner-grow text-secondary" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>    
{{/answer}}