{{!
    @template block_ai_chat/iconpicker

    Template for iconpicker.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "history": {
            "message":"content",
            "sender":"user",
        }
    }
}}


{{< core/modal }}
    {{$title}}
        <div>{{title}}</div>
        {{> block_ai_chat/headeroptions }}
    {{/title}}
    {{$body}}
        <div class="ai_chat_modal_body">
        <div data-content="local_ai_manager_infobox"></div>
            <div class="block_ai_chat-dialog">
                <div class="block_ai_chat-output">
                </div>
                <div class="block_ai_chat-input">
                    <textarea class="form-control" id="block_ai_chat-input-id" placeholder="{{#str}} input, block_ai_chat {{/str}}"></textarea>
                    <button type="submit" id="block_ai_chat-submit-id" class="btn btn-secondary">
                        <span class="d-none d-md-block">{{#str}} submit, block_ai_chat {{/str}}</span>
                        <i class="icon fa fa-arrow-turn-down d-md-none mr-0" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
    {{/body}}
    {{$footer}}
    {{/footer}}
{{/ core/modal }}
